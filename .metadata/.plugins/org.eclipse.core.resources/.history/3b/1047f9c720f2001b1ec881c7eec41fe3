package ferrovia;

public class Station {
	private String sigla, desc, qtd_linhas;
	
	public Station (String sigla, String desc, String qtd_linhas) {
		this.sigla = sigla;
		this.desc = desc;
		this.qtd_linhas = qtd_linhas;
	}
	
	public String infoStation() {
		return "Estação: <" + this.sigla + ">, <"+ this.desc + ">, <"+ this.qtd_linhas + ">.";
	}
}
